extends layout

block content
	form(method="post" action='/register')
		div.form-group
			label(for='username') Username:
			input#username.form-control(type='text',placeholder ='first and last' name='username')
		div.form-group
			label(for='userpassword') userpassword:
			input#userpassword.form-control(type='password',placeholder ='first and last' name='userpassword')
		
		button.btn.btn-primary(type='submit') signup
